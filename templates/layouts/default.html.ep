<!DOCTYPE html>
<html>
  <head>
    <title><%= $title %></title>
  </head>
  <body>
    <div class="debug">
      %= dumper( 'current route:' => current_route )
    </div>
    <ul>
      % unless( current_route '' ) {
      <li><%= link_to '/' => begin %>Home<% end %></li>
      % }
      % unless( current_route =~ m/work.*/ ) {
      <li><%= link_to '/work' => begin %>Working on the file<% end %></li>
      % }
      % unless( current_route 'showConfig' ) {
      <li><%= link_to '/showConfig' => begin %>Show configuration<% end %></li>
      % }
    </ul>
    <%= content %>
  </body>
</html>
